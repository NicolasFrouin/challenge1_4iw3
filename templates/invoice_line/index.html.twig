{% extends 'base.html.twig' %}

{% block title %}InvoiceLine index{% endblock %}

{% block body %}
    <h1>InvoiceLine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice_line in invoice_lines %}
            <tr>
                <td>{{ invoice_line.id }}</td>
                <td>{{ invoice_line.quantity }}</td>
                <td>
                    
                    <twig:Button class="bg-lime-500 dark:bg-lime-600" href="{{ path('app_invoice_line_edit', {'id': invoice_line.id}) }}" text="Modifier" icon="pencil" />
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invoice_line_new') }}">Create new</a>
{% endblock %}
