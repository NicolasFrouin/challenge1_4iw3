{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	<table class="table overflow-x-scroll">
		<thead>
			<tr>
				<th>Id</th>
				<th>Ref</th>
				<th>Name</th>
				<th>Description</th>
				<th>TaxRate</th>
				<th>PriceNoTax</th>
				<th>PriceWithTax</th>
				<th>Weight</th>
				<th>Height</th>
				<th>Width</th>
				<th>Depth</th>
				<th>Active</th>
				<th>CreatedAt</th>
				<th>ModifiedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.ref }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.taxRate }}%</td>
					<td>{{ product.readablePriceNoTax }}</td>
					<td>{{ product.readablePriceWithTax }}</td>
					<td>{{ product.weight }}</td>
					<td>{{ product.height }}</td>
					<td>{{ product.width }}</td>
					<td>{{ product.depth }}</td>
					<td>{{ product.active ? 'Yes' : 'No' }}</td>
					<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.modifiedAt ? product.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<twig:Button
						href="{{ path('app_product_show', {'id': product.id}) }}" text="Voir" icon="magnifying-glass"/>
						{# <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a> #}
						<twig:Button
						href="{{ path('app_product_edit', {'id': product.id}) }}" text="Modifier" icon="pencil"/>
					{# <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a> #}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="15">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
