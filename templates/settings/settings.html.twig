{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6 bg-white shadow rounded-lg">
    <div class="flex flex-col md:flex-row border-b pb-4 mb-6">
        <div class="md:w-1/4 mb-4 md:mb-0">
            <div class="text-center md:text-right">
                <div class="inline-block">
                    <img src="/path/to/profile-image.png" alt="Profile image" class="w-24 h-24 rounded-full border-2 border-gray-300">
                </div>
                <div class="mt-2">
                    <button class="text-blue-500 text-sm">Changer photo</button>
                </div>
            </div>
        </div>
        <div class="md:w-3/4">
            <div class="mb-4">
                <label for="firstname" class="block text-gray-700 text-sm font-bold mb-2">Prénom</label>
                <input type="text" id="firstname" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="Cathy">
            </div>
            <div class="mb-4">
                <label for="lastname" class="block text-gray-700 text-sm font-bold mb-2">Nom</label>
                <input type="text" id="lastname" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="Chu">
            </div>
            <div class="mb-4">
                <label for="company" class="block text-gray-700 text-sm font-bold mb-2">Entreprise</label>
                <input type="text" id="company" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="TechCorp">
            </div>
            <div class="mb-4">
                <label for="role" class="block text-gray-700 text-sm font-bold mb-2">Rôle dans l'entreprise</label>
                <input type="text" id="role" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="Développeur Senior">
            </div>
            <div class="mb-4">
                <label for="signup_date" class="block text-gray-700 text-sm font-bold mb-2">Date d'inscription</label>
                <input type="text" id="signup_date" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="01/01/2020">
            </div>
            <div class="mb-4">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Changer mot de passe</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
