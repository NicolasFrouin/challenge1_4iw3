{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6 bg-white shadow rounded-lg">
    <div class="flex flex-col md:flex-row border-b pb-4 mb-6">
        <div class="md:w-1/4 mb-4 md:mb-0">
            <div class="text-center md:text-right">
                <div class="inline-block">
                    <img src="/path/to/profile-image.png" alt="Profile image" class="w-24 h-24 rounded-full border-2 border-gray-300">
                </div>
                <div class="mt-2">
                    <button class="text-blue-500 text-sm">Changer photo</button>
                </div>
            </div>
        </div>
        <div class="md:w-3/4">
            <div class="mb-4">
                <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Nom d'utilisateur</label>
                <input type="text" id="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="cchu01">
            </div>
            <div>
                <label for="fullname" class="block text-gray-700 text-sm font-bold mb-2">Nom complet</label>
                <input type="text" id="fullname" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="Cathy Chu">
            </div>
        </div>
    </div>

    <div class="flex flex-col md:flex-row">
        <div class="md:w-1/2 mb-4 md:mb-0">
            <h3 class="text-gray-700 text-lg font-medium mb-3">Informations de base</h3>
        </div>
        <div class="md:w-1/2">
            <h3 class="text-gray-700 text-lg font-medium mb-3">Paramètres du système</h3>
            <div class="mb-4">
                <label for="language" class="block text-gray-700 text-sm font-bold mb-2">Langue</label>
                <div class="relative">
                    <select id="language" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                        <option>Anglais (États-Unis)</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M5.5 7L10 11.5 14.5 7z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
