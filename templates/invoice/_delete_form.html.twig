<form method="post" action="{{ path('app_invoice_delete', { id: invoice.id }) }}" onsubmit="return confirm('Voulez-vous supprimer cette facture ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}" />
  <twig:Button class="bg-red-500 dark:bg-red-600" href="{{ path('app_invoice_edit', { id: invoice.id }) }}" text="Supprimer" icon="times" />
</form>
