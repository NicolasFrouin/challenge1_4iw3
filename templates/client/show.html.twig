{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<h1>Client</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Firstname</th>
				<td>{{ client.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ client.lastname }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ client.email }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ client.address }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ client.phone }}</td>
			</tr>
		</tbody>
	</table>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Email</th>
				<th>City</th>
				<th>ZipCode</th>
				<th>Country</th>
				<th>Phone</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in client.getContacts() %}
				<tr>
					<td>{{ contact.name }}</td>
					<td>{{ contact.address }}</td>
					<td>{{ contact.email }}</td>
					<td>{{ contact.city }}</td>
					<td>{{ contact.zipCode }}</td>
					<td>{{ contact.country }}</td>
					<td>{{ contact.phone }}</td>
					<td>
						<a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
						<a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="13">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_client_index') }}">back to list</a>

	<a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>

	{{ include('client/_delete_form.html.twig') }}
{% endblock %}
