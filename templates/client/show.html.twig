{% extends 'base.html.twig' %}

{% block title %}
  Client n°{{ client.id }}
{% endblock %}

{% block body %}
  <h1 class="font-medium text-gray-900 dark:text-gray-400 whitespace-nowrap text-2xl">Client n°{{ client.id }}</h1>

  <twig:Table:Table>
    <tbody>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Id</twig:Table:Header>
        <twig:Table:Data>{{ client.id }}</twig:Table:Data>
      </twig:Table:Row>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Prénom</twig:Table:Header>
        <twig:Table:Data>{{ client.firstname }}</twig:Table:Data>
      </twig:Table:Row>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Nom de famille</twig:Table:Header>
        <twig:Table:Data>{{ client.lastname }}</twig:Table:Data>
      </twig:Table:Row>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Email</twig:Table:Header>
        <twig:Table:Data>{{ client.email }}</twig:Table:Data>
      </twig:Table:Row>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Addrese</twig:Table:Header>
        <twig:Table:Data>{{ client.address }}</twig:Table:Data>
      </twig:Table:Row>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Téléphone</twig:Table:Header>
        <twig:Table:Data>{{ client.phone }}</twig:Table:Data>
      </twig:Table:Row>
      <twig:Table:Row>
        <twig:Table:Header class="text-center text-xs text-gray-700 uppercase whitespace-nowrap bg-gray-50 dark:bg-gray-700 dark:text-gray-400 {{ class|default('') }}">Contacts</twig:Table:Header>
        <twig:Table:Data>
          <table class="w-full text-sm text-left rtl:text-right text-gray-600 dark:text-gray-300">
            <twig:Table:Head columns="Nom, Adresse, Email, Ville, Code postal, Pays, Téléphone" />
            <tbody class="h-full">
              {% for contact in client.contacts %}
                <twig:Table:Row>
                  <twig:Table:Data>{{ contact.name }}</twig:Table:Data>
                  <twig:Table:Data>{{ contact.address }}</twig:Table:Data>
                  <twig:Table:Data>{{ contact.email }}</twig:Table:Data>
                  <twig:Table:Data>{{ contact.city }}</twig:Table:Data>
                  <twig:Table:Data>{{ contact.zipCode }}</twig:Table:Data>
                  <twig:Table:Data>{{ contact.country }}</twig:Table:Data>
                  <twig:Table:Data>{{ contact.phone }}</twig:Table:Data>
                </twig:Table:Row>
              {% else %}
                <twig:Table:Row>
                  <twig:Table:Data colspan="99">Aucune contact enregistré</twig:Table:Data>
                </twig:Table:Row>
              {% endfor %}
            </tbody>
          </table>
        </twig:Table:Data>
      </twig:Table:Row>
    </tbody>
  </twig:Table:Table>

  <twig:Button class="bg-lime-500 dark:bg-lime-600" href="{{ path('app_client_index') }}" text="Retour à la liste" icon="rotate-left" />

  <twig:Button class="bg-lime-500 dark:bg-lime-600" href="{{ path('app_client_edit', { id: client.id }) }}" text="Modifier" icon="pencil" />

  {{ include('client/_delete_form.html.twig') }}
{% endblock %}
