{% extends 'base.html.twig' %}

{% block title %}
	Connectez-vous !
{% endblock %}

{% block body %}
	<section class="flex flex-col items-center w-full">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}

		<h1 class="text-6xl font-normal my-16">Connexion</h1>
		<form method="post" class="flex flex-col w-full px-16 text-4xl">
			<input type="email" placeholder="Adresse e-mail" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-8 py-10 px-6 h-10" autocomplete="email" required autofocus>

			<input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control mb-8 py-10 px-6 h-10" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="my-4 bg-red-400 px-6 py-4 rounded w-fit self-end" type="submit">
				Se connecter
			</button>
		</form>
	</section>
{% endblock %}
